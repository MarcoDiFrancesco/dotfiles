#!/bin/bash

AMOUNT=50
WHAT=words
START=yes

while getopts ":n:wpbls" opt; do
  case $opt in
    n)
      AMOUNT=$OPTARG
      ;;
    s)
      # Start with 'Lorem ipsum...'
      START=true
      ;;
    *)
      echo "Invalid option: -$OPTARG" >&2
      ;;
  esac
done

curl -s -X POST https://www.lipsum.com/feed/json -d "amount=$AMOUNT" -d "what=$WHAT" -d"start=$START" | jq -r '.feed.lipsum' | gpaste-client add

notify-send -t 3000 "Lorem ipsum generator" "Copied to clipboard"

