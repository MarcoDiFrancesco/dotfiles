# Reload bspwm
mod4 + alt + r
	bspc wm -r

# Close
mod4 + w
	bspc node -c

# Kill
mod4 + shift + w
	bspc node -k

# Alternate between the tiled and monocle layout
mod4 + m
	bspc desktop -l next

# Set the window state
mod4 + {t,g,f}
	bspc node -t {tiled,floating,fullscreen}

# Focus the node in the given direction
alt + {Left,Down,Up,Right}
	bspc node -f {west,south,north,east}

# Focus the last node/desktop
mod4 + Tab
	bspc node -f last

# # focus the older or newer node in the focus history
# mod4 + shift + {_,alt +}Tab
# 	bspc wm -h off; \
# 	bspc node {older,newer} -f; \
# 	bspc wm -h on
mod4 + shift + Tab
	bspc wm -h off; \
	bspc node older -f; \
	bspc wm -h on

# focus or send to the given desktop
mod4 + {1-9,0}
	bspc desktop -f '{1-9,10}'

# focus or send to the given desktop
mod4 + shift + {1-9,0}
	bspc node -d '{1-9,10}'

# F keys
mod4 + alt + @{1-9,0,minus,equal}
	xdotool key --clearmodifiers F{1-9,10,11,12}

# Audio
{XF86AudioRaiseVolume,XF86AudioLowerVolume,XF86AudioMute}
	volume-set -{i,d,m}

# Brightness
{XF86MonBrightnessDown,XF86MonBrightnessUp}
	brightness-set -{d,i}
mod4 + {i,o}
	brightness-set -{d,i}

# Screenshot
{_,shift + ,ctrl + }@Print
	screenshot -{c,l,i}

# Sleep
mod4 + alt + y
	/home/marco/scripts/lock

# Clipboard 
mod4 + v
	clipster -s -c

# Urxvt client session
mod4 + s
	urxvtc

# Dmenu
mod4 + d
	rofi -show combi

# Chromium 
mod4 + c
	chromium

# Code
mod4 + x
	code

# Ranger in urxvt client session
#mod4 + z
#	urxvtc -e ranger
